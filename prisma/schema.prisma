// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth.js modellen
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("student") // "student" or "teacher"
  classId       String?
  accounts      Account[]
  sessions      Session[]
  teamMembers   TeamMember[]
  class         Class?    @relation("ClassStudents", fields: [classId], references: [id], onDelete: SetNull)
  classRequests ClassRequest[]
  standups      Standup[]
  retrospectives Retrospective[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ScrumFlow modellen
model Class {
  id          String    @id @default(cuid())
  name        String
  description String?
  teacherId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  students    User[]    @relation("ClassStudents")
  teams       Team[]
  requests    ClassRequest[]
}

model ClassRequest {
  id        String   @id @default(cuid())
  classId   String
  userId    String
  status    String   @default("pending") // "pending", "accepted", "rejected"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([classId, userId])
}

model Team {
  id          String    @id @default(cuid())
  name        String
  description String?
  classId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  class       Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  members     TeamMember[]
  projects    Project[]
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      String   // "owner", "scrum_master", "developer"
  joinedAt  DateTime @default(now())
  
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([teamId, userId])
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  teamId      String
  repositoryUrl String?  // GitHub repository URL
  repositoryOwner String? // GitHub owner/org name
  repositoryName  String? // GitHub repo name
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  team        Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  sprints     Sprint[]
  githubIssues GitHubIssue[]
}

model Sprint {
  id          String    @id @default(cuid())
  name        String
  goal        String?
  projectId   String
  startDate   DateTime
  endDate     DateTime
  status      String    @default("planned") // "planned", "active", "completed"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  githubIssues GitHubIssue[]
  standups    Standup[]
  retrospectives Retrospective[]
}

model GitHubIssue {
  id              String    @id @default(cuid())
  projectId       String
  sprintId        String?
  issueNumber     Int       // GitHub issue nummer
  title           String
  body            String?   // Issue beschrijving
  state           String    // "open" of "closed"
  htmlUrl         String    // Link naar GitHub issue
  status          String    @default("todo") // "todo", "in_progress", "done" - voor sprint board
  labels          String?   // JSON array van labels
  assignees       String?   // JSON array van assignees
  githubCreatedAt DateTime
  githubUpdatedAt DateTime
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sprint          Sprint?   @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  
  @@unique([projectId, issueNumber])
}

model Standup {
  id          String    @id @default(cuid())
  sprintId    String
  userId      String
  date        DateTime  @default(now())
  yesterday   String    // Wat heb je gisteren gedaan?
  today       String    // Wat ga je vandaag doen?
  blockers    String?   // Zijn er blokkades?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  sprint      Sprint    @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([sprintId, userId, date])
}

model Retrospective {
  id          String    @id @default(cuid())
  sprintId    String
  userId      String
  whatWentWell String   // Wat ging goed?
  whatCanImprove String // Wat kan beter?
  actionItems String?   // Actiepunten
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  sprint      Sprint    @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([sprintId, userId])
}
